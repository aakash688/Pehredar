
# Security for uploads directory
# Prevent execution of PHP files
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Allow only image files
<FilesMatch "\.(png|jpg|jpeg|gif|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny other executable files
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
